@model Order
<div class="container">
    <main role="main" class="pb-3">
<h2>Wysyłka</h2>
<p>Proszę podać swoje dane, a zamówione produkty zostaną natychmiast wysłane!</p>



<form asp-action="Checkout" method="post">
    
    <h3>Nabywca</h3>
    <div class="form-group">
        <label>Imię i nazwisko:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Adres</h3>
    <div class="form-group">
        <label>Adres:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adres (ciąg dalszy):</label><input asp-for="Line2" class="form-control" />
    </div>

    <div class="form-group">
        <label>Miasto:</label><input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kod pocztowy:</label><input asp-for="Zip" class="form-control" />
    </div>
 
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Złóż zamówienie" />
    </div>
</form>
